
<!-- Log4j2 初始化配置:此处利用Web环境初始化方式，可实现配置文件路径的自定义 --> 
<context-param>
	<param-name>log4jConfiguration</param-name>
	<param-value>classpath:log4j2.xml</param-value>
</context-param>
<listener>
	<listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
</listener>

<!-- Properties文件加载监听；需要放在web.xml靠前的位置 -->
<listener>
	<description>Properties文件加载监听</description>
	<listener-class>com.woshidaniu.common.web.linstener.PropertiesInitializedListener</listener-class>
</listener>

<!-- Spring - 字符集编码过滤器-->
<filter>
	<description>change the encode type of the request</description>
	<filter-name>CharacterEncodingFilter</filter-name>
	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	<init-param>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value>
	</init-param>
</filter>
<filter-mapping>
	<filter-name>CharacterEncodingFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

<!-- Csrf安全监听 -->
<listener>
	<listener-class>com.woshidaniu.safety.csrf.listener.CsrfHttpSessionListener</listener-class>
</listener>

<!-- Ehcache缓存关闭监听 -->
<listener>
    <listener-class>net.sf.ehcache.constructs.web.ShutdownListener</listener-class>
</listener>

<!-- Spring - 上下文配置 -->
<context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>classpath*:conf/spring/common.xml</param-value>
</context-param>
<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

<!--系统服务状态监听	-->
<listener>
	<listener-class>com.woshidaniu.common.web.linstener.woshidaniuServiceStartedListener</listener-class>
</listener>
